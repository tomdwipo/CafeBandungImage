<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tommyputranto.tes2.MapActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image_gambar2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#46000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_nama2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="6dp"
                    android:textColor="#ffff"
                    android:textSize="25sp"
                    tools:text="nama"/>

                <TextView
                    android:id="@+id/textview_alamat2"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingLeft="16dp"
                    android:textColor="#ffff"
                    tools:text="alamat"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            tools:text="tesvdgfd"/>

        <TextView
            android:id="@+id/fasilitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/fasilitas_textview"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <ListView
            android:id="@+id/list_fasilitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/colorNewDark"
            android:dividerHeight="1dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="@string/lokasi_textview"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/activity_horizontal_margin"

            />
    </LinearLayout>

</ScrollView>
